{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

<h1>Please Register!</h1>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


     <div class="form-group">

         {{ form_label(form.firstName, 'Enter your full name',{'attr': {'for': 'fullname'}}) }}
         {{ form_widget(form.firstName, {'attr': {'class': 'form-control input-lg', 'id': 'firstName', 'placeholder': 'Jon Doe', 'required': 'required'}}) }}
         <small id="fullnameHelp" class="form-text text-muted">{{ form_errors(form.firstName) }}</small>
     </div>

    <div class="form-group">

        {{ form_label(form.username, 'Enter a Username',{'attr': {'for': 'username'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg', 'id': 'username', 'placeholder': 'Jon123', 'required': 'required'}}) }}
        <small id="fullnameHelp" class="form-text text-muted">{{ form_errors(form.username) }}</small>
    </div>


     <div class="form-group">
    {{ form_label(form.email, 'Enter your email',{'attr': {'for': 'email'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'id': 'form.email', 'placeholder': 'email@gmail.com', 'required': 'required'}}) }}
         <small id="emailHelp" class="form-text text-muted">{{ form_errors(form.email) }}</small>
     </div>


    <div class="form-group">
        {{ form_label(form.plainPassword, 'Enter your password',{'attr': {'for': 'plainPassword'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'id': 'plainPassword', 'placeholder': 'Enter your password', 'required': 'required'}}) }}
        <small id="passwordHelp" class="form-text text-muted">{{ form_errors(form.plainPassword) }}</small>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword, 'Enter your password again',{'attr': {'for': 'plainPassword'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'id': 'plainPassword2', 'placeholder': 'Enter your password again', 'required': 'required'}}) }}
        <small id="passwordtwoHelp" class="form-text text-muted">{{ form_errors(form.plainPassword) }}</small>
    </div>

<div>
    <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}

{% endblock %}
